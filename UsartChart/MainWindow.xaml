<Window x:Class="UsartChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsartChart"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    <DockPanel>
        <local:StatusBar x:Name="m_StatusBar" DockPanel.Dock="Bottom" Height="28"></local:StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <DockPanel DockPanel.Dock="Left">
                <local:UART x:Name="m_UART" DockPanel.Dock="Top"/>
                <local:SelectSections x:Name="m_SelectSections"/>
            </DockPanel>
            <local:Chart x:Name="m_Chart" Grid.Column="1"/>
        </Grid>
        
    </DockPanel>
</Window>
